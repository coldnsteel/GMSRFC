  <script>
    // CTOK Payment Function
    function buyAccess(itemId, price) {
      try {
        const url = new URL(window.location.href);
        url.pathname = '/Dogpatch-Market/sectors/cashier/index.html';
        url.searchParams.set('item', itemId);
        url.searchParams.set('amount', price);
        window.location.href = url.toString();
      } catch (e) {
        console.error('Access payment redirect failed:', e);
      }
    }

    // Forum Functionality
    function sendMessage() {
      const input = document.getElementById('forumInput');
      const forumBox = document.getElementById('forumBox');
      const message = input.value.trim();
      if (message) {
        const newMessage = document.createElement('p');
        newMessage.innerHTML = `<strong>Scholar:</strong> ${message}`;
        forumBox.appendChild(newMessage);
        forumBox.scrollTop = forumBox.scrollHeight;
        input.value = '';
      }
    }

    // Handle Enter key for forum
    document.getElementById('forumInput').addEventListener('keypress', (e) => {
      if (e.key === 'Enter') sendMessage();
    });
  </script>
