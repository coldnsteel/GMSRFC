<body>
  <div class="container">
    <h1>ðŸš€ Starship Out Trips</h1>
    <p>Embark on a cosmic journey! Log your mission and collect starship NFTs.</p>

    <!-- Mission Log -->
    <div class="mission-log" id="missionLog">
      <p><strong>Captain1:</strong> Launched to Andromeda! ðŸŒŒ</p>
    </div>
    <input
      type="text"
      class="mission-input"
      id="missionInput"
      placeholder="Log your mission..."
    />
    <button class="btn" onclick="logMission()">Log Mission</button>

    <!-- CTOK Payment for NFT/Access -->
    <button class="btn" onclick="buyAccess('starship-access', 1)">
      ðŸŒŸ Access Starship (1 CTOK)
    </button>
    <button class="btn" onclick="buyNFT('starship-nft', 5)">
      ðŸª™ Buy Starship NFT (5 CTOK)
    </button>
    <a href="/index.html">Back to GMSRFC Hub</a>
  </div>

  <script>
    // CTOK Payment Functions
    function buyAccess(itemId, price) {
      try {
        const url = new URL(window.location.href);
        url.pathname = '/Dogpatch-Market/sectors/cashier/index.html';
        url.searchParams.set('item', itemId);
        url.searchParams.set('amount', price);
        window.location.href = url.toString();
      } catch (e) {
        console.error('Access payment redirect failed:', e);
      }
    }

    function buyNFT(itemId, price) {
      try {
        const url = new URL(window.location.href);
        url.pathname = '/Dogpatch-Market/sectors/cashier/index.html';
        url.searchParams.set('item', itemId);
        url.searchParams.set('amount', price);
        window.location.href = url.toString();
      } catch (e) {
        console.error('NFT payment redirect failed:', e);
      }
    }

    // Mission Log Functionality
    function logMission() {
      const input = document.getElementById('missionInput');
      const missionLog = document.getElementById('missionLog');
      const message = input.value.trim();
      if (message) {
        const newMessage = document.createElement('p');
        newMessage.innerHTML = `<strong>Captain:</strong> ${message}`;
        missionLog.appendChild(newMessage);
        missionLog.scrollTop = missionLog.scrollHeight;
        input.value = '';
      }
    }

    // Handle Enter key for mission log
    document.getElementById('missionInput').addEventListener('keypress', (e) => {
      if (e.key === 'Enter') logMission();
    });
  </script>
