    <script>
        function purchaseItem(item, amount) {
            // Redirect to cashier with item and amount parameters
            const cashierUrl = '/Dogpatch-Market/sectors/cashier/index.html';
            const params = new URLSearchParams({
                item: item,
                amount: amount
            });
            
            window.location.href = `${cashierUrl}?${params.toString()}`;
        }

        // Log market activity
        document.addEventListener('DOMContentLoaded', function() {
            const log = JSON.parse(localStorage.getItem('securityLog') || '[]');
            log.push({
                issue: 'Market accessed',
                timestamp: new Date().toISOString(),
                source: 'DogpatchMarket',
                token: 'ψΩ§∞'
            });
            localStorage.setItem('securityLog', JSON.stringify(log));
        });
    </script>
