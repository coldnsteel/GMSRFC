    <div class="heuristic-panel" id="heuristicPanel">
        <div class="panel-header">SYSTEM DIAGNOSTICS</div>
        <div id="heuristicLog"></div>
    </div>
    
    <div class="manuals-section">
        <h1 class="panel-title">üìö GMSRFC Manuals & Downloads</h1>
        
        <div id="manualsList">‚ö†Ô∏è Complete payment and add transaction ID to access manuals.</div>
        
        <div class="payment-section">
            <h3 style="color: #0080ff; margin-bottom: 15px;">Crypto Payment Only</h3>
            
            <button class="control-btn" onclick="showCryptoDetails('bitcoin', 'manuals', 10)">ü™ô Bitcoin</button>
            <button class="control-btn" onclick="showCryptoDetails('ethereum', 'manuals', 10)">üíé Ethereum</button>
            <button class="control-btn" onclick="showCryptoDetails('ctok', 'manuals', 10)">üåü CTOK</button>
        </div>
        
        <div id="cryptoDetails" class="crypto-details" style="display: none;"></div>
        
        <div style="margin-top: 30px; padding-top: 20px; border-top: 1px solid #333;">
            <p style="color: #888; font-size: 12px;">
                After payment, add ?tx=[transaction_id]&item=[hackerwatch-manual|kozmic-kasino-manual|studio-manual] to URL
            </p>
        </div>
    </div>

    <script>
        const products = {
            'hackerwatch-manual': { 
                type: 'file', 
                url: '/HACKERWATCH_USER_MANUAL.md', 
                name: 'HackerWatch User Manual' 
            },
            'kozmic-kasino-manual': { 
                type: 'file', 
                url: '/KOZMIC_KASINO_USER_MANUAL.md', 
                name: 'Kozmic Kasino User Manual' 
            },
            'studio-manual': { 
                type: 'file', 
                url: '/PERSONAL_HOME_STUDIO_MANUAL.md', 
                name: 'Personal Home Studio Manual' 
            }
        };

        function addLog(module, test, result, details) {
            const timestamp = new Date().toLocaleTimeString();
            const logMessage = `[${module}] ${test}: ${result ? 'PASS' : 'FAIL'} ${details || ''}`;
            const logElement = document.getElementById('heuristicLog');
            if (logElement) {
                const logDiv = document.createElement('div');
                logDiv.className = `heuristic-log ${result ? 'log-pass' : 'log-fail'}`;
                logDiv.textContent = `${timestamp} ${logMessage}`;
                logElement.appendChild(logDiv);
                logElement.scrollTop = logElement.scrollHeight;
                if (logElement.children.length > 30) {
                    logElement.removeChild(logElement.firstChild);
                }
            }
        }

        function showCryptoDetails(crypto, itemId, price) {
            const details = document.getElementById('cryptoDetails');
            let address, name;
            
            if (crypto === 'bitcoin') {
                address = '1A1zP1eP5QGefi2DMPTfTL5SLmv7DivfNa';
                name = 'Bitcoin (BTC)';
            } else if (crypto === 'ethereum') {
                address = '0x742d35Cc6634C0532925a3b844Bc454e4438f44e';
                name = 'Ethereum (ETH)';
            } else if (crypto === 'ctok') {
                address = 'CTOK-ADDRESS-PLACEHOLDER';
                name = 'CTOK';
            }
            
            details.innerHTML = `
                <h4>üí∞ ${name} Payment</h4>
                <p><strong>Amount:</strong> $${price} USD equivalent</p>
                <p><strong>Address:</strong> ${address}</p>
                <p><strong>Instructions:</strong> Send payment, then email receipt to Lexalytics@yahoo.com with transaction ID</p>
                <p><strong>Access:</strong> Add ?tx=[your_transaction_id]&item=[manual_name] to this URL</p>
            `;
            details.style.display = 'block';
            addLog('payment', `Displayed ${crypto} payment details`, true, `$${price} for ${itemId}`);
        }

        function checkTransaction() {
            const params = new URLSearchParams(window.location.search);
            const txId = params.get('tx');
            const item = params.get('item');
            const manualsList = document.getElementById('manualsList');
            
            if (!txId || !item || !products[item]) {
                addLog('payment', 'No valid transaction', false, 'Showing payment options');
                manualsList.innerHTML = `
                    <div style="padding: 20px;">
                        <h3 style="color: #ffaa00; margin-bottom: 15px;">Available Manuals</h3>
                        <p style="margin-bottom: 15px;">‚Ä¢ HackerWatch User Manual</p>
                        <p style="margin-bottom: 15px;">‚Ä¢ Kozmic Kasino User Manual</p>
                        <p style="margin-bottom: 15px;">‚Ä¢ Personal Home Studio Manual</p>
                        <p style="color: #ff6666;">Complete payment below to access downloads</p>
                    </div>
                `;
                return;
            }
            
            const product = products[item];
            manualsList.innerHTML = `
                <div style="padding: 20px; background: rgba(0,255,0,0.1); border-radius: 10px;">
                    <h3 style="color: #00ff00; margin-bottom: 15px;">‚úÖ Access Verified</h3>
                    <p style="margin-bottom: 15px;">Transaction: ${txId}</p>
                    <a href="https://coldnsteel.github.io/GMSRFC${product.url}" class="control-btn" download>
                        üì• Download ${product.name}
                    </a>
                </div>
            `;
            addLog('payment', `Access granted for ${product.name}`, true, `TX: ${txId}`);
        }

        document.addEventListener('DOMContentLoaded', () => {
            addLog('system', 'INITIALIZATION', true, 'GMSRFC Manuals system ready');
            addLog('system', 'FILES', true, 'Manual files located in root directory');
            checkTransaction();
        });
    </script>
