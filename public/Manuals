    <script>
        const products = {
            'hackerwatch-manual': { 
                type: 'file', 
                url: '/public/Manuals/HACKERWATCH_USER_MANUAL.md', 
                name: 'HackerWatch User Manual' 
            },
            'kozmic-kasino-manual': { 
                type: 'file', 
                url: '/public/Manuals/KOZMIC_KASINO_USER_MANUAL.md', 
                name: 'Kozmic Kasino User Manual' 
            },
            'studio-manual': { 
                type: 'file', 
                url: '/public/Manuals/PERSONAL_HOME_STUDIO_MANUAL.md', 
                name: 'Personal Home Studio Manual' 
            }
        };

        function addLog(module, test, result, details) {
            const timestamp = new Date().toLocaleTimeString();
            const logMessage = `[${module}] ${test}: ${result ? 'PASS' : 'FAIL'} ${details || ''}`;
            const logElement = document.getElementById('heuristicLog');
            if (logElement) {
                const logDiv = document.createElement('div');
                logDiv.className = `heuristic-log ${result ? 'log-pass' : 'log-fail'}`;
                logDiv.textContent = `${timestamp} ${logMessage}`;
                logElement.appendChild(logDiv);
                logElement.scrollTop = logElement.scrollHeight;
                if (logElement.children.length > 50) {
                    logElement.removeChild(logElement.firstChild);
                }
            }
        }

        function showCryptoDetails(crypto, itemId, price) {
            const details = document.getElementById('cryptoDetails');
            details.innerHTML = `
                <p>Send ${crypto === 'bitcoin' ? 'BTC' : 'ETH'} equivalent of $${price} to:</p>
                <p>${crypto === 'bitcoin' ? '1A1zP1eP5QGefi2DMPTfTL5SLmv7DivfNa' : '0x742d35Cc6634C0532925a3b844Bc454e4438f44e'}</p>
                <p>Email receipt to Lexalytics@yahoo.com and add ?tx=[your_tx_id]&item=[hackerwatch-manual|kozmic-kasino-manual|studio-manual] to URL.</p>
            `;
            addLog('payment', `Displayed ${crypto} payment details for ${itemId}`, true);
        }

        function checkTransaction() {
            const params = new URLSearchParams(window.location.search);
            const txId = params.get('tx');
            const item = params.get('item');
            const manualsList = document.getElementById('manualsList');
            if (!txId || !item || !products[item]) {
                addLog('payment', 'Invalid transaction or item', false, 'Add ?tx=[your_tx_id]&item=[hackerwatch-manual|kozmic-kasino-manual|studio-manual]');
                manualsList.innerHTML = '‚ö†Ô∏è Complete payment and add transaction ID to access manuals.';
                return;
            }
            const product = products[item];
            manualsList.innerHTML = `‚úÖ Access verified. <a href="https://coldnsteel.github.io/GMSRFC${product.url}" class="control-btn" download>Download ${product.name}</a>`;
            addLog('payment', `Unlocked ${product.name}`, true);
        }

        document.addEventListener('DOMContentLoaded', () => {
            addLog('system', 'INITIALIZATION', true, 'Manuals page ready!');
            checkTransaction();
        });
    </script>
